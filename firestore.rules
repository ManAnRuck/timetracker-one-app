rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {



    match /users/{user} {
      allow read, update, delete: if request.auth.uid == user;
      allow create: if request.auth.uid != null;
    }
    
    
    function isAdminOfTeam(team) {
      return request.auth.token.admin[team] == true;
    }


    match /teams/{team} {
      allow create: if false;
      allow read: if isAdminOfTeam(team)
      allow update: if isAdminOfTeam(team);
      allow delete: if request.auth.token.admin[team] == true;
    }
    
    

    match /tasks/{task} {
      allow create: if request.auth.uid != null
        && request.resource.data.user == request.auth.uid 
        && request.auth.token.admin[request.resource.data.team] == true
      allow read, list: if request.auth.uid != null 
        && request.auth.token.admin[resource.data.team] == true;
      allow update: if request.auth.uid != null 
        && request.auth.token.admin[resource.data.team] == true
      allow delete: if request.auth.uid != null 
        && request.auth.token.admin[resource.data.team] == true
    }
    
    

    match /times/{time} {
      allow read, list: if request.auth.uid != null 
        && request.auth.token.admin[resource.data.team] == true
      allow create: if request.auth.uid != null 
        && request.resource.data.user == request.auth.uid 
        && request.auth.token.admin[request.resource.data.team] == true
      allow update: if request.auth.uid == resource.data.user
        && request.resource.data.team == resource.data.team
      allow delete: if request.auth.uid == resource.data.user
    }
    
    

    match /invitations/{invitation} {
      allow create: if request.auth.uid != null 
        && request.auth.token.admin[request.resource.data.team] == true
      allow read: if resource.data.email == request.auth.token.email
        || request.auth.token.admin[resource.data.team] == true
      allow list: if request.auth.token.admin[resource.data.team] == true
      allow update: if false
      allow delete: if resource.data.email == request.auth.token.email
        || request.auth.token.admin[resource.data.team] == true
    }
  }
}